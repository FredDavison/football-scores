#!/usr/bin/env python

import logging

from footie_scores import settings
settings.SQLA_ECHO = True

from footie_scores.engine import league_manager
from footie_scores.utils.log import start_logging
from footie_scores.db.schema import create_tables_if_not_present, drop_tables

logger = logging.getLogger(__name__)

start_logging()
drop_tables()
create_tables_if_not_present()
league_manager.save_competitions_to_db()
